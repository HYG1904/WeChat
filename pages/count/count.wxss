/* pages/count/count.wxss */

.tabbar{
  display: flex;
  height: 88rpx;
  justify-content: space-around;
  align-items: center;
  border-bottom: 1px solid #eee;
}

.tabbar .act{
  position: relative;
}
.act.blue{
  color: blue;
}
.act.green{
  color: greenyellow;
}
.act.red{
  color: #FF4626
}

.tabbar .act::after{
  position: absolute;
  bottom: -20rpx;
  left: 0;
  width: 100%;
  height: 8rpx;
  content: "";
  border-radius: 8rpx 8rpx 0 0;
}

.blue::after{
  background-color: blue;
}
.green::after{
  background-color: greenyellow;
}
.red::after{
  background-color: #FF4626;
}

.bar{
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
}




